        <Grid Width="800" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ProgressBar Value=".5" />
            <ProgressBar Grid.Column="1"
                         Foreground="#30d7d7"
                         Value="0" />
            <ProgressBar Grid.Column="2"
                         Foreground="#f4cd42"
                         Value="1" />
            <ProgressBar Grid.Column="3"
                         Foreground="#874ad8"
                         Value="0.7" />
        </Grid>


