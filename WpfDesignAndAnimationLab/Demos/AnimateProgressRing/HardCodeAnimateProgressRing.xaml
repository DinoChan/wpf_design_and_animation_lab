<wpfdesignandanimationlab:DemoPage  xmlns:wpfdesignandanimationlab="clr-namespace:WpfDesignAndAnimationLab" x:Class="WpfDesignAndAnimationLab.Demos.AnimateProgressRing.HardCodeAnimateProgressRing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDesignAndAnimationLab.Demos.AnimateProgressRing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Grid>
                
                <local:AnimateProgressRing
                    Width="208"
                    Height="208"
                    Maximum="1"
                    Value="{Binding ElementName=Slider, Path=Value}" />
            </Grid>
            <Slider
                x:Name="Slider"
                Width="200"
                Margin="0,38,0,0"
                HorizontalAlignment="Center"
                Maximum="1"
                Minimum="0"
                Value="1" />
        </StackPanel>
    </Grid>
</wpfdesignandanimationlab:DemoPage>
