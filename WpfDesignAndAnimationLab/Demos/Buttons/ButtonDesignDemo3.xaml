                                   StrokeThickness="2" />
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="20"
                                   Foreground="#33B1FF"
                                   Text="&#xF5B0;" />
                    </Grid>
