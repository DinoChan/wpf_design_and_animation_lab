                                   Stroke="#519BCA"
                                   StrokeThickness="2" />
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="20"
                                   Foreground="#33B1FF"
                                   Text="&#xF5B0;" />
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Background="#88898d">
            <StackPanel VerticalAlignment="Center">
                <Button Width="42"
                        Height="42"
                        Margin="16">
                    <Grid>
                        <Rectangle Fill="#c00000"
                                   RadiusX="14"
                                   RadiusY="14"
                                   Stroke="#c55555"
                                   StrokeThickness="2" />
                        <Rectangle Width="16"
                                   Height="16"
                                   Fill="#c99999" />
                    </Grid>
                </Button>
                <Button Width="42"
                        Height="42"
                        Margin="16">
                    <Grid>
                        <Rectangle Fill="#137DBF"
                                   RadiusX="14"
                                   RadiusY="14"
                                   Stroke="#519BCA"
                                   StrokeThickness="2" />
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="20"
                                   Foreground="#33B1FF"
                                   Text="&#xF5B0;" />
                    </Grid>
                </Button>

                <Button Width="42"
                        Height="42"
                        Margin="16"
                        IsEnabled="False">
                    <Grid>
                        <Rectangle Fill="#c00000"
                                   RadiusX="14"
                                   RadiusY="14"
                                   Stroke="#c55555"
                                   StrokeThickness="2" />
                        <Rectangle Width="16"
                                   Height="16"
                                   Fill="#c99999" />
                    </Grid>

                </Button>

                <Button Width="42"
                        Height="42"
                        Margin="16"
